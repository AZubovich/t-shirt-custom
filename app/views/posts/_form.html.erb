<head><link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script></head>
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css"/>
<%= render 'posts/navsing' %>
<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="main-divv">
  <div class="form-group row">
    <%= form.label :Theme, class:"col-4 col-form-label"%>
    <div class="col-8">
      <%= form.text_field :title , class:"form-control"%>
    </div>
  </div>

  <div class="form-group row">
      <%= form.label :image,class:"col-4 col-form-label" %>
    <div class="col-8 ui-widget">
      <%= form.file_field :image , class:"btn btn-secondary" %>
    </div>
  </div>


  <div class="form-group row">
      <%= form.label :Description ,class:"col-4 col-form-label"%>
    <div class="col-8">
      <%= form.text_area :description, class:"form-control" %>
    </div>
  </div> 

  
  <div class="form-group row">
     <%= form.label :Price, class:"col-4 col-form-label"%>
    <div class="col-8">
      <%= form.text_field :price , class:"form-control"%>
    </div>
  </div>

  <div class="actions">
    <div class="sumbit-control">
      <%= form.submit :class => "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>
</div>
<% end %>
